<?xml version="1.0" encoding="UTF-8"?>

<faces-config
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
    version="2.0">
    
<application>
 	<locale-config>
 		<default-locale>pt_BR</default-locale>
 	</locale-config>
 </application>
 
<managed-bean>
	<managed-bean-name>usuarioBean</managed-bean-name>
	<managed-bean-class>managedBeans.UsuarioBean</managed-bean-class>
	<managed-bean-scope>session</managed-bean-scope>
</managed-bean>
<managed-bean>
	<managed-bean-name>loginBean</managed-bean-name>
	<managed-bean-class>managedBeans.LoginBean</managed-bean-class>
	<managed-bean-scope>session</managed-bean-scope>
</managed-bean>
<managed-bean>
	<managed-bean-name>editBean</managed-bean-name>
	<managed-bean-class>managedBeans.EditUsuarioBean</managed-bean-class>
	<managed-bean-scope>session</managed-bean-scope>
</managed-bean>

<navigation-rule>
	<navigation-case>
		<from-outcome>index</from-outcome>
		<to-view-id>/index.jsf</to-view-id>
		<redirect/>
	</navigation-case>
	
	<navigation-case>
  		<from-outcome>novoUsuario</from-outcome>
   		<to-view-id>/pages/adminPages/novoUsuario.jsf</to-view-id>
   		<redirect/>
	</navigation-case>
</navigation-rule>
</faces-config>
